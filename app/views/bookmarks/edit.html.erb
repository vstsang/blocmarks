<h1>Edit Bookmark</h1>

<div class='row'>
  <div class='col-md-4'>
    <p>Please edit your bookmark address below</p>
  </div>
</div>

<div class='row'>
  <div class='col-md-12'>
    <%= form_for [@topic, @bookmark]  do |f| %>
      <div class='form-group'>
        <%= f.label :url, "URL Address" %>
        <%= f.text_field :url, class: 'form-control', placeholder: 'Enter URL'%>
      </div>

      <div class='form-group'>
        <%= f.submit 'Ok', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
