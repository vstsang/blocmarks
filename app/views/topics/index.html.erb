<div class="center">
  <h2>All Blocmarks</h2>
</div>

<div class="pull-right">
  <%= link_to "New topic", new_topic_path(@topics), class: 'btn btn-success' %>
</div>

<% @topics.each do |topic| %>
  <div class="container">
    <div class="row">
      <div class="topic-title col-md-6">
        <h2><%= link_to "#" + topic.title, topic %></h2>
      </div>
    </div>
    <div class="row bookmark-body">
      <% topic.bookmarks.each do |bookmark| %>
        <div class="col-md-3">
          <%= link_to bookmark.url, bookmark.url %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
